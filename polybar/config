[bar/main]
monitor = eDP-1
width = 100%
height = 28
offset-x = 0
offset-y = 0
enable-ipc = true

bottom = false

background = #EE2E3440
foreground = #88C0D0
linecolor = #D8DEE9

spacing = 1
lineheight = 2
padding-top = 1
padding-left = 0
padding-right = 2
module-margin-left = 0
module-margin-right = 2

font-0 = hack:size=10;0
font-1 = FontAwesome:size=12;1
font-2 = Weather Icons:size=12;1

modules-left = bspwm memory cpu
modules-right = monitor backlight weather wifi wired volume battery date

tray-position = right
tray-maxsize = 20

wm-restack = bspwm

[module/nightmode]
type = custom/script
exec = ~/dotfiles/scripts/nightmode/display_icon.sh
click-left = ~/dotfiles/scripts/nightmode/change_mode.sh
interval = 5

[module/monitor]
type = custom/script
exec = ~/dotfiles/scripts/monitor/display_icon.sh
click-left = ~/dotfiles/scripts/monitor/change_monitor.sh
interval = 5

[module/weather]
type = custom/script
exec = ~/dotfiles/scripts/weather/weather.sh
interval = 600
label-font = 3
label-foreground = #B48EAD

[module/backlight]
type = internal/backlight

card = intel_backlight

; Available tags:
;   <label> (default)
;   <ramp>
;   <bar>
format = <ramp><bar>

; Available tokens:
;   %percentage% (default)
label = %percentage%%

; Only applies if <ramp> is used
