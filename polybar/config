[module/memory]
type = internal/memory

; Seconds to sleep between updates
; Default: 1
interval = 3

; Available tags:
;   <label> (default)
;   <bar-used>
;   <bar-free>
;   <ramp-used>
;   <ramp-free>
;   <bar-swap-used> (unreleased)
;   <bar-swap-free> (unreleased)
;   <ramp-swap-used> (unreleased)
;   <ramp-swap-free> (unreleased)
format = <label>

; Available tokens:
;   %percentage_used% (default)
;   %percentage_free%
;   %gb_used%
;   %gb_free%
;   %gb_total%
;   %mb_used%
;   %mb_free%
;   %mb_total%
;   %percentage_swap_used%
;   %percentage_swap_free%
;   %mb_swap_total%
;   %mb_swap_free%
;   %mb_swap_used%
;   %gb_swap_total%
;   %gb_swap_free%
;   %gb_swap_used%
label = RAM %{F#BF616A}%gb_used%%{F-} | %{F#A3BE8C}%gb_free%%{F-}

; Only applies if <bar-used> is used
bar-used-indicator =
bar-used-width = 50
bar-used-foreground-0 = #55aa55
bar-used-foreground-1 = #557755
bar-used-foreground-2 = #f5a70a
bar-used-foreground-3 = #ff5555
bar-used-fill = â–
bar-used-empty = â–
bar-used-empty-foreground = #444444

; Only applies if <ramp-used> is used
ramp-used-0 = â–
ramp-used-1 = â–‚
ramp-used-2 = â–ƒ
ramp-used-3 = â–„
ramp-used-4 = â–…
ramp-used-5 = â–†
ramp-used-6 = â–‡
ramp-used-7 = â–ˆ

; Only applies if <ramp-free> is used
ramp-free-0 = â–
ramp-free-1 = â–‚
ramp-free-2 = â–ƒ
ramp-free-3 = â–„
ramp-free-4 = â–…
ramp-free-5 = â–†
ramp-free-6 = â–‡
ramp-free-7 = â–ˆ

[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label> <ramp-coreload>

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = CPU %percentage%%

; Spacing between individual per-core ramps (unreleased)
ramp-coreload-spacing = 1
ramp-coreload-0 = â–
ramp-coreload-1 = â–‚
ramp-coreload-2 = â–ƒ
ramp-coreload-3 = â–„
ramp-coreload-4 = â–…
ramp-coreload-5 = â–†
ramp-coreload-6 = â–‡
ramp-coreload-7 = â–ˆ

[module/bspwm]
type = internal/bspwm

enable-click = false

pin-workspaces = true

format = <label-state> <label-mode>

label-focused = %name%
label-focused-foreground = #ECEFF4
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = #88C0D0
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = #B48EAD
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = #5E81AC
label-empty-padding = 1


[module/wifi]
type = internal/network
interface = wlp59s0
interval = 5

format-connected = <label-connected>
; label-connected = ï‡« %essid%
label-connected = ï‡« %essid% : %local_ip%
label-connected-foreground = #A3BE8C


[module/wired]
type = internal/network
interface = enp2s0
interval = 5

label-connected = %{T3}%local_ip%%{T-}
label-connected-foreground = #A3BE8C


[module/date]
type = internal/date
interval = 20
date = "ï„³ %a %d, %I:%M %p"
format-foreground = #BF616A

